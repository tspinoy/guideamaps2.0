{
    "name": "react-gojs",
    "version": "1.3.3",
    "description": "GoJS React integration",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "node scripts/clean.js && tsc",
        "watch": "node scripts/clean.js && tsc -w",
        "test": "node scripts/test.js --env=jsdom",
        "coverage": "node scripts/test.js --env=jsdom --coverage",
        "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
        "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/xcomponent/react-gojs.git"
    },
    "keywords": [
        "gojs",
        "react"
    ],
    "author": "XComponent <dev@xcomponent.com> (http://www.xcomponent.com)",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/xcomponent/react-gojs/issues"
    },
    "homepage": "https://github.com/xcomponent/react-gojs#readme",
    "devDependencies": {
        "@types/enzyme": "^3.1.13",
        "@types/jest": "^23.3.1",
        "@types/node": "^10.5.6",
        "@types/react": "^16.4.7",
        "@types/react-dom": "^16.0.6",
        "coveralls": "^3.0.2",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "husky": "^1.0.0-rc.8",
        "jest": "^23.4.2",
        "jest-canvas-mock": "^1.1.0",
        "prettier": "1.14.0",
        "pretty-quick": "^1.6.0",
        "react": "16.x",
        "react-dom": "16.x",
        "ts-jest": "^23.1.3",
        "tslint": "^5.11.0",
        "tslint-config-prettier": "^1.14.0",
        "tslint-plugin-prettier": "^1.3.0",
        "tslint-react": "^3.6.0",
        "typescript": "^3.0.1"
    },
    "dependencies": {
        "gojs": "^1.8.26"
    },
    "peerDependencies": {
        "react": "16.x",
        "react-dom": "16.x"
    },
    "jest": {
        "setupTestFrameworkScriptFile": "<rootDir>/config/jest/setup.js",
        "collectCoverageFrom": [
            "src/**/*.{js,jsx,ts,tsx}"
        ],
        "testMatch": [
            "<rootDir>/src/**/?(*.)(test).ts?(x)"
        ],
        "testEnvironment": "node",
        "testURL": "http://localhost",
        "transform": {
            "^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js",
            "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
            "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
        },
        "transformIgnorePatterns": [
            "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"
        ],
        "moduleFileExtensions": [
            "mjs",
            "web.ts",
            "ts",
            "web.tsx",
            "tsx",
            "web.js",
            "js",
            "web.jsx",
            "jsx",
            "json",
            "node"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    }
}
